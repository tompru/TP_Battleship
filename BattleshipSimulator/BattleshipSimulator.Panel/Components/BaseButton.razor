<button @onclick="@OnClick"
        disabled="@Disabled"
        class="@Class">
    <span>
        @Text
    </span>
</button>

@code {
    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public bool Disabled { get; set; }
}
